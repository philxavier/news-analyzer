{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./",
    "outDir": "public",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es6",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": ["node"],

    "typeRoots": ["node_modules/@types"]
  },
  "include": ["server/**/*.ts"],
  "exclude": ["./public/"]
}
